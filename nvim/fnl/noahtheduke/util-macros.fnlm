;; fennel-ls: macro-file
;; [nfnl-macro]

(λ when-require [args ...]
  (let [gensyms []
        errs (gensym "errors")
        binds (icollect [_ v (ipairs args)]
                (if (sym? v)
                  (let [g (gensym)]
                    (table.insert gensyms g)
                    `(,g ,v))
                  `(xpcall (λ [] (require ,v))
                           (λ [err#] (table.insert ,errs (debug.traceback err#))))))]
    `(let [,errs []
           ,(unpack binds)]
       (if (and ,(unpack gensyms))
         (do ,...)
         (vim.notify (. ,errs 1) vim.log.levels.ERROR)))))

(λ callback [args ...]
  `(λ ,args
     (do ,...)
     nil))


{: when-require
 : callback}
